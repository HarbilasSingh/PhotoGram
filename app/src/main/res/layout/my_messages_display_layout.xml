<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="5dp">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/my_messages_profile_image"
            android:src="@drawable/profile"/>

        <ImageView
            android:id="@+id/all_users_online_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="0dp"
            android:layout_alignBottom="@+id/my_messages_profile_image"
            android:layout_alignRight="@+id/my_messages_profile_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/online"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/my_messages_profile_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_messages_full_name"
                android:text="User full name"
                android:layout_gravity="start"
                android:layout_marginLeft="2dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_messages_status"
                android:text="Status"
                android:layout_gravity="start"
                android:layout_marginLeft="2dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


        </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/message_display_badge"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>